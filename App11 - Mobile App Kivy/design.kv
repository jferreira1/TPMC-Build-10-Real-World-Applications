<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 5, 5
            Label:
                text: "Login"
                font_size: '30sp'
            TextInput:
                hint_text: "Username"
                id: username
                size_hint: 1, 0.3
            TextInput:
                hint_text: "Password"
                id: password
                password: True
                size_hint: 1, 0.3
            RelativeLayout:
                Button:
                    background_color: 0, 0.45, 0.85, 1
                    size_hint: 0.4, 0.4
                    pos_hint: {'center_x':0.5, 'center_y': 0.5}
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                text: ""
                id: wrong_login
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 15, 15
            spacing: 25, 0
            Button:
                text: "Forgot Password?"
                on_press: root.recover()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0, 0.45, 0.85, 1
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0, 0.45, 0.85, 1

<SignUpScreen>:
    GridLayout:
        cols:1
        padding: 15, 15
        spacing: 5, 5
        Label:
            text: "Sign up for a space journey"
            font_size: '25sp'
        TextInput:
            hint_text: "Username"
            id: username
            size_hint: 1, 0.15
        TextInput:
            hint_text: "Password"
            id: password
            password: True
            size_hint: 1, 0.15
        RelativeLayout:
            Button:
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.3, 0.3
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_color: 0, 0.45, 0.85, 1

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        padding: 20, 20
        Label:
            text: "Signup successful!"
            font_size: '30sp'
        RelativeLayout:
            Button:
                text: "Login"
                on_press: root.login_page()
                size_hint: 0.3, 0.3
                pos_hint: {'center_x':0.5, 'center_y': 0.8}
                background_color: 0, 0.45, 0.85, 1
            
<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 20, 20
        spacing: 20, 20

        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.9, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
            font_size: '25sp'
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved..."
            size_hint: 0.3, 0.3
        RelativeLayout:
            Button:
                text: "Enlight me"
                background_color: 0, 0.45, 0.85, 1
                on_press: root.enlight(root.ids.feeling.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                
        ScrollView:
            Label:
                id: message
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]  

<ForgotPasswordScreen>:
    GridLayout:
        cols:1
        padding: 15, 15
        spacing: 5, 5
        Label:
            text: "Recover your password"
            font_size: '25sp'
        TextInput:
            hint_text: "Username"
            id: username
            size_hint: 1, 0.15
        Label:
            text: ""
            id: forgot_pw
            size_hint: 1, 0.15
        RelativeLayout:
            Button:
                text: "Recover"
                on_press: root.recover_pw(root.ids.username.text)
                size_hint: 0.3, 0.3
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_color: 0, 0.45, 0.85, 1


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_sucess_screen"
    LoginScreenSuccess:
        name: "login_success_screen"
    ForgotPasswordScreen:
        name: "forgot_password_screen"
